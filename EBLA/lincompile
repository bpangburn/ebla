#!/bin/bash
#
# $Id$
#
# LINUX COMPILATION SCRIPT FOR EBLA
#
# DELETE ANY EXISTING .class FILES AND RE-COMPILE ALL .java FILES FOR EBLA
#
rm -r ./bin
mkdir ./bin
javac -source 1.6 -target 1.6 -Xlint -d ./bin -classpath .:./jars/h2-1.3.155.jar:./jars/jmf.jar:./jars/swingset-bin.jar ./src/com/greatmindsworking/utils/*.java ./src/com/greatmindsworking/EDISON/segm/*.java ./src/com/greatmindsworking/EBLA/*.java ./src/com/greatmindsworking/EBLA/Interfaces/*.java